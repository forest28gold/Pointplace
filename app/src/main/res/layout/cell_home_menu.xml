<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="2" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp" >

        <LinearLayout
            android:id="@+id/tab_menu1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:orientation="vertical" >
            
            <LinearLayout
        		android:layout_width="match_parent"
        		android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/relativelayout_menu1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@mipmap/home_menu11" >

                <ImageButton
                    android:id="@+id/imageButton_menu1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_home_menu" />

                <TextView
                    android:id="@+id/textView_home_menu1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/imageView_home_menu_icon1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="8dp"
                    android:layout_toRightOf="@+id/imageView_home_menu_icon1"
                    android:text="Shopping"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imageView_home_menu_icon1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="14dp"
                    android:src="@mipmap/home_icon11" />

            </RelativeLayout>
            
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab_menu2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:orientation="vertical" >
            
            <LinearLayout
        		android:layout_width="match_parent"
        		android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/relativelayout_menu2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@mipmap/home_menu12" >

                <ImageButton
                    android:id="@+id/imageButton_menu2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_home_menu" />

                <ImageView
                    android:id="@+id/imageView_home_menu_icon2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="14dp"
                    android:src="@mipmap/home_icon12" />

                <TextView
                    android:id="@+id/textView_home_menu2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/imageView_home_menu_icon2"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="8dp"
                    android:layout_toRightOf="@+id/imageView_home_menu_icon2"
                    android:text="Travel"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

            </RelativeLayout>
            
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
